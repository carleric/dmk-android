<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
                android:title="@string/dmk_connect">
   
	<EditTextPreference
		android:key="remote_ip"
		android:title="@string/remote_ip"
		android:summary="@string/remote_ip" 
		android:defaultValue="192.168.1.5"
		/>
		
	<EditTextPreference
		android:key="remote_port"
		android:title="@string/remote_port"
		android:summary="@string/remote_port" 
		android:defaultValue="1703"
		/>
		
	<EditTextPreference
		android:key="local_port"
		android:title="@string/local_port"
		android:summary="@string/local_port" 
		android:defaultValue="1703"
		/>
		
	</PreferenceCategory>
   
    
</PreferenceScreen>